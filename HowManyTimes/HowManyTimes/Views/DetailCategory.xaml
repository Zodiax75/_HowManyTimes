                                Fill="gray"
                                HeightRequest="18"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                WidthRequest="18" />
                        </Grid>
                    </sh:Shadows>

                    <!--Delete button-->
                    <sh:Shadows
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="{OnPlatform Android='0,90,0,0',
                                            iOS='0,90,0,0'}"
                        CornerRadius="24"
                        HeightRequest="48"
                        HorizontalOptions="Start"
                        Shades="{sh:SingleShade BlurRadius=15,
                                                     Offset='10,10',
                                                     Opacity=0.15,
                                                     Color={StaticResource colorBlack20}}"
                        WidthRequest="48">

                        <Grid>
                            <BoxView
                                BackgroundColor="{StaticResource colorWhite}"
                                CornerRadius="24"
                                HeightRequest="48"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                WidthRequest="48" />
                            <BoxView
                                Margin="2,0,0,0"
                                BackgroundColor="{StaticResource colorWhiteF3}"
                                CornerRadius="22"
                                HeightRequest="44"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="44" />
                            <Image Source="trash"
                                   HeightRequest="14"
                                   WidthRequest="14"></Image>
                        </Grid>
                    </sh:Shadows>

                    <!--Edit button-->
                    <sh:Shadows
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="{OnPlatform Android='0,90,0,0',
                                            iOS='0,90,0,0'}"
                        CornerRadius="24"
                        HeightRequest="48"
                        HorizontalOptions="Start"
                        Shades="{sh:SingleShade BlurRadius=15,
                                                     Offset='10,10',
                                                     Opacity=0.15,
                                                     Color={StaticResource colorBlack20}}"
                        WidthRequest="48">

                        <Grid>
                            <BoxView
                                BackgroundColor="{StaticResource colorWhite}"
                                CornerRadius="24"
                                HeightRequest="48"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                WidthRequest="48" />
                            <BoxView
                                Margin="2,0,0,0"
                                BackgroundColor="{StaticResource colorWhiteF3}"
                                CornerRadius="22"
                                HeightRequest="44"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="44" />
                            <Path 
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                WidthRequest="18"
                                HeightRequest="18"
                                Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,
                                        8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,
