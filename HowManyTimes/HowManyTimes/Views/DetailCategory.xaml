<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:PanCake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:sh="clr-namespace:Sharpnado.Shades;assembly=Sharpnado.Shadows"
             x:Class="HowManyTimes.Views.DetailCategory"
             xmlns:converter="clr-namespace:HowManyTimes.Services"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:FavoriteIconConverter x:Key="favoriteIconConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>
            <Grid BackgroundColor="{StaticResource colorWhite}">
                <sh:Shadows
                        CornerRadius="175"
                        HorizontalOptions="End"
                        Shades="{sh:SingleShade BlurRadius=20,
                                                 Offset='-8,8',
                                                 Opacity={OnPlatform Android='0.28',
                                                                     iOS='0.4'},
                                                 Color={StaticResource colorBlack20}}"
                        TranslationX="{OnPlatform Android='110',
                                                  iOS='115'}"
                        TranslationY="-90"
                        VerticalOptions="Start"
                        >
                    <PanCake:PancakeView
                                                    Grid.Row="0"
                                                    Margin="12,12,12,0"
                                                    Padding="0"
                                                    BackgroundColor="{StaticResource colorWhite}"
                                                    Border="{PanCake:BorderMarkup Color={StaticResource colorGrayE0}, Thickness='1'}"
                                                    CornerRadius="175"
                                                    HorizontalOptions="Center"
                                                    IsClippedToBounds="True"
                                                    >
                        <Image
                            Aspect="AspectFill"
                            HeightRequest="{OnPlatform Android='350',
                                                       iOS='380'}"
                            HorizontalOptions="End"
                            Source="bike"
                            VerticalOptions="Start"
                            WidthRequest="{OnPlatform Android='350',
                                                      iOS='380'}" />
                    </PanCake:PancakeView>
                </sh:Shadows>



                <Grid
                    Margin="{OnPlatform Android='30,20,0,30',
                                        iOS='30,0,0,30'}"
                    ColumnDefinitions=".3*, .7*"
                    RowDefinitions="auto, auto, auto, auto, 80, auto, 140, *">
                    <!--Back button-->
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Aspect="AspectFit"
                        HeightRequest="22"
                        HorizontalOptions="StartAndExpand"
                        Source="arrow_left"
                        WidthRequest="22">
                    </Image>

                    <!--Favourite icon and text-->
                    <sh:Shadows
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="{OnPlatform Android='0,90,0,0',
                                            iOS='0,90,0,0'}"
                        CornerRadius="24"
                        HeightRequest="48"
                        HorizontalOptions="Start"
                        Shades="{sh:SingleShade BlurRadius=15,
                                                     Offset='10,10',
                                                     Opacity=0.15,
                                                     Color={StaticResource colorBlack20}}"
                        WidthRequest="48">

                        <Grid>
                            <BoxView
                                BackgroundColor="{StaticResource colorWhite}"
                                CornerRadius="24"
                                HeightRequest="48"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                WidthRequest="48" />
                            <BoxView
                                Margin="2,0,0,0"
                                BackgroundColor="{StaticResource colorWhiteF3}"
                                CornerRadius="22"
                                HeightRequest="44"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="44" />
                            <Label
                                                FontSize="21"
                                                HorizontalOptions="CenterAndExpand"
                                                Text="&#xf005;"
                                                FontFamily="FontAwesome5Regular"
                                                TextColor="{Binding SelectedCategory.Favorite, Converter={StaticResource favoriteIconConverter}}"
                                                VerticalOptions="Center" />
                        </Grid>
                    </sh:Shadows>

                    <!--Delete button-->
                    <sh:Shadows
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="{OnPlatform Android='0,90,0,0',
                                            iOS='0,90,0,0'}"
                        CornerRadius="24"
                        HeightRequest="48"
                        HorizontalOptions="Start"
                        Shades="{sh:SingleShade BlurRadius=15,
                                                     Offset='10,10',
                                                     Opacity=0.15,
                                                     Color={StaticResource colorBlack20}}"
                        WidthRequest="48">

                        <Grid>
                            <BoxView
                                BackgroundColor="{StaticResource colorWhite}"
                                CornerRadius="24"
                                HeightRequest="48"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                WidthRequest="48" />
                            <BoxView
                                Margin="2,0,0,0"
                                BackgroundColor="{StaticResource colorWhiteF3}"
                                CornerRadius="22"
                                HeightRequest="44"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="44" />
                            <Label
                                                FontSize="21"
                                                HorizontalOptions="CenterAndExpand"
                                                Text="&#xf2ed;"
                                                FontFamily="FontAwesome5Regular"
                                                TextColor="{StaticResource colorOrange}"
                                                VerticalOptions="Center" />
                        </Grid>
                    </sh:Shadows>

                    <!--Edit button-->
                    <sh:Shadows
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="{OnPlatform Android='0,90,0,0',
                                            iOS='0,90,0,0'}"
                        CornerRadius="24"
                        HeightRequest="48"
                        HorizontalOptions="Start"
                        Shades="{sh:SingleShade BlurRadius=15,
                                                     Offset='10,10',
                                                     Opacity=0.15,
                                                     Color={StaticResource colorBlack20}}"
                        WidthRequest="48">

                        <Grid>
                            <BoxView
                                BackgroundColor="{StaticResource colorWhite}"
                                CornerRadius="24"
                                HeightRequest="48"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                WidthRequest="48" />
                            <BoxView
                                Margin="2,0,0,0"
                                BackgroundColor="{StaticResource colorWhiteF3}"
                                CornerRadius="22"
                                HeightRequest="44"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="44" />
                            <Label
                                                FontSize="21"
                                                HorizontalOptions="CenterAndExpand"
                                                Text="&#xf044;"
                                                FontFamily="FontAwesome5Regular"
                                                TextColor="{StaticResource colorOrange}"
                                                VerticalOptions="Center" />
                        </Grid>
                    </sh:Shadows>

                    <!--Counter name and description-->
                    <Label
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Margin="0,50,0,15"
                        FontFamily="FontPoppinsMedium"
                        FontSize="20"
                        Text="{Binding SelectedCategory.Name}"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Margin="0,0,20,0"
                        FontSize="Small"
                        Text="{Binding SelectedCategory.Description}" />

                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>